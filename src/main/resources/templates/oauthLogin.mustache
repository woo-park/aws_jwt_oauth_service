{{>layout/header}}

<div class="container">
    <div class="col-sm-3 well">
        <h3>Login with:</h3>
        <div class="list-group">
            <a href="oauth2/authorize-client/google" class="list-group-item active">google Client</a>
            <a href="oauth2/authorize-client/kakao" class="list-group-item active">kakao Client</a>
            <a href="oauth2/authorize-client/naver" class="list-group-item active">naver Client</a>
        </div>
        <div class="list-group">
            <form id="myForm" action="/login_proc" class="form-signin" method="post" >
                <input type="hidden" value="secret" name="secret_key" />
                <div class="form-group">
                    <input type="text" class="form-control" name="username" placeholder="Id" required="required" autofocus="autofocus">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" placeholder="password" required="required">
                </div>
                <!--                <button type="button" onclick="formLogin()" id="formbtn" class="btn btn-lg btn-primary btn-block">Ajax login</button>-->
                <button type="submit" onclick="checkForm();" class="btn btn-lg btn-primary btn-block">Login</button>
                <!--        <button type="button" onclick="formLogin();" id="formbtn" class="btn btn-lg btn-primary btn-block">Ajax login</button>-->
            </form>
        </div>
    </div>



</div>
{{>layout/footer}}
