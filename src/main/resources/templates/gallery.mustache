<div class="col-md-12">
    <div class="col-md-2">
        <form>
            <div class="form-group">
                <label for="img">파일 업로드</label>
                제목 : <input id="file_title" type="text" name="title"> <br>
                <input type="file" id="img">
            </div>
            <button type="button" class="btn btn-primary" id="btn-save">저장</button>
        </form>
    </div>
    <div class="col-md-10">
        <p><strong>결과 이미지입니다.</strong></p>
        <img src="" id="result-image">
    </div>
</div>



<!--부트스트랩 js, jquery 추가-->
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

<script>
    $('#btn-save').on('click', uploadImage);

    function uploadImage() {
        console.log('clicked')
        let fileTitle = $('#file_title').val();
        let file = $('#img')[0].files[0];
        let formData = new FormData();
        formData.append('file', file);
        formData.append('title', fileTitle);

        $.ajax({
            type: 'POST',
            url: '/gallery/upload',
            async: true,
            data: formData,
            processData: false,
            contentType: false
        }).done(function (data) {
            console.log('received data: ', data);
            // $('#result-image').attr("src", "https://" + data);
        }).fail(function (error) {
            console.warn(error);
        });
    }


